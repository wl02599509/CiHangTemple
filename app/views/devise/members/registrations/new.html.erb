<div class='entire_form'>
  <div class='form_title'><%= t('.members_sign_up') %></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form_helper' }) do |f| %>
    <%= render "devise/members/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :id_card_number %>
      <%= f.text_field :id_card_number, autofocus: true, autocomplete: "id_card_number", class: 'field_input' %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field_input' %>
    </div>

    <div class="field">
      <%= f.label :phone %>
      <%= f.phone_field :phone, autofocus: true, autocomplete: "phone", class: 'field_input' %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'field_input' %>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'field_input' %>
    </div>

    <div class="field">
      <%= f.label :birth_date %>
      <%= f.date_field :birth_date, autofocus: true, autocomplete: "birth_date", class: 'field_input' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em class='text-sm m-auto'>(<%= t('.characters_minimum', length: @minimum_password_length) %>)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'field_input' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'field_input' %>
    </div>

    <%= f.submit t('.sign_up'), class: 'button' %>
  <% end %>

  <%= render "devise/members/shared/links" %>
</div>
